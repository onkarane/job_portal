@model IEnumerable<Job>

@{
    ViewData["Title"] = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (TempData["App"] != null)
{
    <div class="alert alert-success">@TempData["App"] </div>
}
@if (TempData["AppError"] != null)
{
    <div class="alert alert-danger">@TempData["AppError"] </div>
}


@if (Model.Any())
{
    <h1 class="text-center">SearchResults</h1>
    <div>
        @foreach (var item in Model)
        {
            <div class="card mx-auto mb-3" style="width: 28rem;box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
">
                <div class="card-body">
                    <h5 class="card-title"> @item.JobTitle</h5>
                    <p class="card-text"> PostDate : @item.JobPostDate</p>
                    <p class="card-text"> Location: @item.Location</p>
                    <p class="card-text"> Job Type: @item.JobType</p>
                    <p class="card-text"> Description @item.Summary</p>
                    <a asp-action="Apply" asp-route-id="@item.JobId" class="btn btn-primary">Apply</a>
                </div>
            </div>
        }
    </div>

}
else
{
    <h1 class="text-center">Nothing to Display</h1>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-success text-dark">Apply For Jobs</a>
    </div>
}